<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-md-6 mt-4 p-2">
      <h1 class="text-center">Add New Food</h1>
      <%= form_with(model: @food, url: foods_path, local: true) do |form| %>
        <div class = "mt-4 p-2">
          <%= form.label :name, "Food Name:" %>
          <%= form.text_field :name,
              autofocus: true, 
              autocomplete: 'name', 
              placeholder: 'New food name', 
              class: 'form-control' 
          %>
          <% if @food.errors.any? %>
              <p class="text-danger mb-0">
                <%= @food.errors[:name].first %>
              </p>
          <% end %>
        </div>
    
        <div class = "mt-2 p-2">
          <%= form.label :measurement_unit, "Measurement Unit:" %>
          <%= form.text_field :measurement_unit,
              autofocus: true, 
              autocomplete: 'measurement unit', 
              placeholder: 'Measurement Unit', 
              class: 'form-control' 
          %>
          <% if @food.errors.any? %>
              <p class="text-danger mb-0">
                <%= @food.errors[:measurement_unit].first %>
              </p>
          <% end %>
        </div>
    
        <div class = "mt-2 p-2">
          <%= form.label :price, "Unit Price:" %>
          <%= form.number_field :price,
              autofocus: true,
              autocomplete: 'price',
              placeholder: 'Unit Price',
              class: 'form-control' 
          %>
          <% if @food.errors.any? %>
              <p class="text-danger mb-0">
                <%= @food.errors[:price].first %>
              </p>
          <% end %>
        </div>
    
        <div class="actions text-center">
          <%= form.submit class: 'btn btn-outline-dark btn-sm mt-4' %>
          <%= link_to 'Cancel', foods_path, class: 'btn btn-outline-dark btn-sm mt-4 px-3' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
