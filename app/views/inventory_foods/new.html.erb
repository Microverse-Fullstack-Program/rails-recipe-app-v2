<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-md-6 mt-4 p-2">
      <h1 class="text-center">
        Add Food to <%= @inventory.name %>
      </h1>
      <% if @foods.empty? %>
        <p class="alert alert-info">
          There are no foods in the database. Please add food to the database.
        </p>
        <%= link_to 'New Food', new_food_path, class: "btn btn-primary" %>
      <% else %>
        <%= render 'form' %>
      <% end %>
    </div>
  </div>
</div>