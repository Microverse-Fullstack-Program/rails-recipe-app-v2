
<div class="modal fade modal-wrapper" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Generate Shopping List</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <h5 class="modal-title text-center ms-4 mt-2">Choose an inventory to use</h5>
      <div class="modal-body">
        <div class="m-2">
            <%= form_with(url: shopping_list_path, method: :get, class: 'd-flex justify-content-between') do |f| %>
              <%= f.hidden_field :recipe_id, value: @recipe.id %>
              <%= f.collection_select :inventory_id, @inventories, :id, :name, { prompt: '.. Select Inventory ..' }, id: 'inventory-select' %>
              <%= f.submit 'Generate', class: 'btn btn-dark' %>
            <% end %>
        </div>   
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary btn-sm" data-bs-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>
</div>
