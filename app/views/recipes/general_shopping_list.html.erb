<h2>Shopping List</h2>
 
<div class = "shopping_list_container">
<div class = "shopping_list_wrapper">
<div>
<h5>Amount of food to buy: <%= @missing_foods.length%> </h5>
<h5>Total value of food needed: $<%= @total_value_needed %> </h5>
</div>
<div>

<h5>Recipe: <%= link_to "Recipe #{@recipe_id}", recipe_path(@recipe), class: "link-active" %></h5>
<h5>Inventory: <%= link_to "Inventory #{@inventory_id}", inventory_path(@inventory), class: "link-active" %></h5>

</div>
</div>


	<table class="table table-striped table-bordered table-size">
					<thead>
						<tr>
							<th scope="col">Food</th>
							<th scope="col">Quantity</th>
							<th scope="col">Price</th>
						</tr>
					</thead>
					<tbody>
				 <% @missing_foods.each do |missing_food| %>	
         	<tr>
									
							<td><%=missing_food.food.name %></td>
							<td><%=missing_food.quantity %></td>
						<td>$
                            <% if missing_food.quantity.present? && missing_food.food.price.present? %>
                                <%= missing_food.quantity * missing_food.food.price %>
                            <% else %>
                                N/A
                            <% end %>
                            </td>
			
								<% end %>

						</tr>
					</tbody>
			</table>