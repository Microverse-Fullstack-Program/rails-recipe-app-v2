<%= form_with(model: @inventory, url: inventories_path, local: true) do |form| %>
	<div class = "mt-4 p-2">
		<%= form.text_field :name,
        autofocus: true, 
        autocomplete: 'name', 
        placeholder: 'New inventory name', 
        class: 'form-control' 
    %>
    <% if @inventory.errors.any? %>
        <p class="text-danger mb-0">
          <%= @inventory.errors[:name].first %>
        </p>
    <% end %>
	</div>

	<div class = "mt-2 p-2">
		<%= form.text_area :description, rows: "5",
        autofocus: true, 
        autocomplete: 'description', 
        placeholder: 'Description of the inventory', 
        class: 'form-control' 
    %>
    <% if @inventory.errors.any? %>
        <p class="text-danger mb-0">
          <%= @inventory.errors[:description].first %>
        </p>
    <% end %>
  </div>

  <div class="actions text-center">
    <%= form.submit class: 'btn btn-outline-dark btn-sm mt-4' %>
    <%= link_to 'Cancel', inventories_path, class: 'btn btn-outline-dark btn-sm mt-4 px-3' %>
  </div>
<% end %>
